@model Academico.Models.Departamento
@{
    Layout = null;
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="content">
    <h4>Editar Departamento</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DepartamentoID" class="control-label">Departamento ID: </label>
                    <input asp-for="DepartamentoID" class="form-control" disabled />
                    <span asp-validation-for="DepartamentoID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="DepartamentoID" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="back-link">
        <a asp-action="Index">Voltar para a Lista</a>
    </div>
</div>

